<UserControl x:Class="Project.Views.Admin.WorkersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>




        <DockPanel  Grid.Row="0" VerticalAlignment="Center">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA62020"/>
                    <GradientStop Color="#FF3C1313" Offset="1"/>
                    <GradientStop Color="#FF9C2121" Offset="0.462"/>
                </LinearGradientBrush>
            </DockPanel.Background>

            <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource BaseText}"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26">Workers</TextBlock>
            <Button Command="{Binding ChangeUserData}"   Content="Добавить" IsDefault="True"  Background="#05B790" Foreground="#ffffff" FontSize="16"  Width="100" Margin="20" />
            <Button HorizontalAlignment="Right"  VerticalAlignment="Top" Command="{Binding ChangeUserData}"     Content="Обновить" IsDefault="True"  Background="#05B790" Foreground="#ffffff" FontSize="16"  Width="120" Margin="20" />


        </DockPanel>
        <ListView
                  ScrollViewer.CanContentScroll="True" 
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  MaxHeight="400"
                  Grid.Row="1"
                  Margin="5 "  
                  HorizontalAlignment="Left"  
                  FontFamily="Book Antiqua" FontSize="16" FontWeight="Normal"
                  IsSynchronizedWithCurrentItem="False" 
                   Width="950" ItemsSource="{Binding AllFavourites}">
            <ListView.View >

                <GridView  AllowsColumnReorder="true">
                    <GridViewColumn  DisplayMemberBinding="{Binding Worker.Title}" 
                      Header="Book's Title" Width="120"/>
                    <GridViewColumn  DisplayMemberBinding="{Binding Worker.Title}" 
                      Header="Book's Title" Width="120"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Book.Author.Name}" 
                      Header="Author's Name" Width="120"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Book.Author.Surname}" 
                          Header="Author's Surname" Width="120"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Book.Author.Firstname}" 
                          Header="Author's Firstname" Width="200"/>


                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
